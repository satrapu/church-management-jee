<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application id="churchmanagement">
        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>ro_RO</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ro.satrapu.churchmanagement.ui.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <!-- 
        message-bundle XML node is needed in order to localize JSF converters and validators messages 
        -->
        <message-bundle>ro.satrapu.churchmanagement.ui.messages</message-bundle>
    </application>
    <!--    
    <factory>
        <exception-handler-factory>ro.satrapu.churchmanagement.ui.ExceptionHandlerFactory</exception-handler-factory>
    </factory>
    -->
</faces-config>